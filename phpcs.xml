<?xml version="1.0"?>
<ruleset name="cakephp-essentials">
    <arg value="p"/>
    <arg name="colors"/>

    <file>.</file>

    <rule ref="./vendor/cakephp/cakephp-codesniffer/CakePHP/ruleset.xml"/>

    <rule ref="Generic.Files.LineLength.TooLong">
        <severity>0</severity>
    </rule>
    <rule ref="SlevomatCodingStandard.Commenting.DocCommentSpacing.IncorrectLinesCountBetweenDifferentAnnotationsTypes">
        <severity>0</severity>
    </rule>
    <rule ref="SlevomatCodingStandard.Functions.RequireTrailingCommaInCall.MissingTrailingComma">
        <severity>0</severity>
    </rule>

    <exclude-pattern>/coverage/</exclude-pattern>
    <exclude-pattern>/vendor</exclude-pattern>
</ruleset>
